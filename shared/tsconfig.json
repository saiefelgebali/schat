/**
Q: How to share code between typescript projects.
A: https://stackoverflow.com/questions/47729344/how-to-share-code-between-typescript-projects
*/

{
	"compilerOptions": {
		/* Truncated compiler options to list only relevant options */
		"target": "ES2015",
		"moduleResolution": "node",
		"rootDir": "./src",
		"outDir": "./dist",
		"composite": true,
		"esModuleInterop": true
	},
	"references": [] // * Any project that is referenced must itself have a `references` array (which may be empty).
}
